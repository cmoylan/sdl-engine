# Tab style
# http://astyle.sourceforge.net/astyle.html#_indent=spaces
indent=spaces=4

# Bracket style
# http://astyle.sourceforge.net/astyle.html#_style=1tbs
style=otbs

# Break else from previous '}'
# http://astyle.sourceforge.net/astyle.html#_break-closing-brackets
break-closing-brackets

# Pad operators with spaces
# http://astyle.sourceforge.net/astyle.html#_pad-oper
pad-oper

# Pad if, for, while with spaces
# http://astyle.sourceforge.net/astyle.html#_pad-header
pad-header

# Remove all other padding
# http://astyle.sourceforge.net/astyle.html#_unpad-paren
unpad-paren

# Place bracket on same line as class declaration
# http://astyle.sourceforge.net/astyle.html#_attach_classes
attach-classes

# Indent namespaces
# http://astyle.sourceforge.net/astyle.html#_indent-namespaces
indent-namespaces

# Align * and & with type
# http://astyle.sourceforge.net/astyle.html#_align-reference
align-reference=type

# 80 character lines
# http://astyle.sourceforge.net/astyle.html#_max-code-length
max-code-length=80
break-after-logical

# Allow one line brackets
# http://astyle.sourceforge.net/astyle.html#_add-one-line-brackets
add-one-line-brackets
